@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    <form method="post">
        <div class="form-group">
            <label for="email">Email</label>
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Email", style = "width: 300px; height: 40px; margin: 10px auto;" })
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", style = "width: 300px; height: 40px; margin: 10px auto;" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Verify Login</button>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <div class="form-group">
        <a href="@Url.Page("/credentials/create")" class="btn btn-secondary">Register</a>
    </div>

</div>
